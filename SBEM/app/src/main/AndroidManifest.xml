<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.sbem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SBEM">
        <activity android:name=".LoginActivity"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".supervisor.ui.UpdateLeavesActivity" />
        <activity
            android:name=".supervisor.ui.AllocateDutiesActivity"
            android:label="@string/allocate_duties" />
        <activity
            android:name=".supervisor.SupervisorActivity"
            android:label="@string/title_activity_supervisor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".owner.ui.TerminateEmployeeActivity"
            android:label="@string/emp_termination" />
        <activity
            android:name=".owner.ui.NewEmployeeActivity"
            android:label="@string/new_emp" />
        <activity
            android:name=".owner.ui.ChangeStatusDeptActivity"
            android:label="@string/activate_dept" />
        <activity
            android:name=".owner.ui.CreateDepartmentActivity"
            android:label="@string/create_dept" />
        <activity
            android:name=".OwnerActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SBEM.NoActionBar" />
    </application>

</manifest>