    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20sp">


            <EditText
                android:id="@+id/leave_emp_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20dp"
                android:padding="10sp"
                android:inputType="number"
                android:layout_margin="10sp"
                android:hint="@string/emp_id" />

            <EditText
                android:id="@+id/leave_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:textAlignment="center"
                android:hint="@string/leave_type_info" />

            <EditText
                android:id="@+id/leave_emp_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:hint="@string/leave_start_info"
                android:inputType="date" />
            <EditText
                android:id="@+id/leave_emp_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:hint="@string/leave_end"
                android:inputType="date" />

            <Button
                app:backgroundTint="@null"
                android:id="@+id/approuve_leave_employee"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:textSize="25sp"
                android:layout_marginTop="20sp"
                android:text="@string/grant_leave_grant" />

            <Button
                app:backgroundTint="@null"
                android:id="@+id/update_leave_employee"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:textSize="25sp"
                android:layout_marginTop="20sp"
                android:text="@string/emp_update_info" />

            <Button
                app:backgroundTint="@null"
                android:id="@+id/terminate_leave_employee"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:textSize="25sp"
                android:layout_marginTop="20sp"
                android:text="@string/emp_terminate_info" />

        </LinearLayout>
    </ScrollView>

